# Application
APP_NAME=CodeQuest
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=codequest
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password

# JWT
SECRET_KEY=your-secret-key-change-this-in-production-to-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/github/callback

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Email (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=CodeQuest <noreply@codequest.com>

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/codequest.log

# Redis (for caching, optional)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_GITHUB_INTEGRATION=True
ENABLE_EMAIL_NOTIFICATIONS=False

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
